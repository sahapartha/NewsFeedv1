<% include featureViews/head %>
  <body>
    <% include featureViews/menuItemsLoggedIn %>
    <div class="text-center">
      <div class="alert alert-info">
          <span>Admin Name  : <%= user.name %>  </span><br>
          <span>Email : <%= user.email %>  </span>
      </div>
  </div>
      <div class="container">
        <% if(msg){ %>
          <div class="text-center">
            
        </div>
        <div class="alert alert-primary" role="alert">
          <h4 class="alert-heading text-center"><%=msg%></h4>
        </div>
        <% } %>
    <div class="mb-3 card shadow ">
        <div class="card-header">
            <h4><%= title %></h4>
          </div>
    <form class="card-body" method="POST" action="/addNews">
        <label for="title" class="form-label">Title</label>
        <input type="text" name="title" class="form-control" id="title" placeholder="Enter Title" required>
        <br>
        <label for="description" class="form-label">Description</label>
        <textarea type="text" name="description" class="form-control" id="description" placeholder="Enter Description" rows="3" required></textarea>
        <br>
        <label for="category">News Category</label>
          <select id="category" name="category" class="form-control" required>
            <option selected></option>
            <option value="normal">normal</option>
            <option value="sports">sports</option>
          </select><br>
        <label for="url" class="form-label">Article Url</label>
        <input type="text" name="url" class="form-control" id="url" placeholder="Enter article url" required>
        <br>
        <label for="imgUrl" class="form-label">Article Image Link</label>
        <input type="text" name="imgUrl" class="form-control" id="imgUrl" placeholder="Enter image link" required>
        <br>
        <button type="submit" class="btn btn-primary">Publish</button>
    </form>
</div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
<script>
       $(".alert.alert-primary")
   .fadeIn( function() 
   {
      setTimeout( function()
      {
         $(".alert.alert-primary").fadeOut("fast");
      }, 5000);
   });
</script>
<% include featureViews/footer %>
  </body>
</html>
