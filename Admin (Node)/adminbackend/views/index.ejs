<% include featureViews/head %>
<body>
    <% include featureViews/menuItemsLoggedOut %>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="text-center">
                        <div class="succ">
                            <%=msg%>
                        </div><br>
                        <h2>Login</h2>
                    </div>
                    <form id="loginForm" action="/auth/login" method="POST">
                        <div class="form-group">
                            <label for="email">Email:</label>
                            <input type="email" class="form-control" id="email" placeholder="Enter Email" name="email"
                                required>
                        </div>
                        <div class="form-group">
                            <label for="password">Password:</label>
                            <input type="password" class="form-control" id="password" placeholder="Enter Password"
                                name="password" required>
                        </div>
                        <div class="text-center">
                            
                            <div class="errr">
                                <%=error%>
                            </div>
                            
                            <hr />
                            <button type="submit" id="btnLogin" class="btn btn-primary" role="button">Log In</button>
                            <button type="reset" id="btnResetLogin" class="btn btn-secondary"
                                role="button">Reset</button>
                        </div>
                       
                    </form>
                    <div class="text-center">
                        Don't have an account? <a href="/register">Register</a>
                    </div>
                </div>
            </div>
        </div>
        <% include featureViews/footer %>
</body>

</html>